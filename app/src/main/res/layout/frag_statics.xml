<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#770000ff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_count" >

        <TextView
            android:id="@+id/tv_avai_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="本月可用余额:"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_avai_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_avai_balance"
            android:padding="20dp"
            android:text="100"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/linear_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_avai_balance"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="本月收入:"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_income_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="25sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_income"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_expend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="本月支出:"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_expend_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="25sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="5dp" >

        <Button
            android:id="@+id/btn_income_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_count"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:text="收支详情"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_expend_ansyalse"
            android:layout_width="0dp"
            android:background="@drawable/bg_count"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="支出分析"
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>